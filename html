<body >
    
            <form class="contenor" onsubmit="main(); return false">
                <div class="icon"> <img src="temperature-vector-icon.jpg" alt="" id="ic" style="color: #0f100e;"></div>
                <label>convert temperature into celsius or fahrenheit</label>
                <br>
                <input type="number" id="val" name="temp">
                <select name="op" id="op">
                    <option value="celsius">celsius</option>
                    <option value="fahrenheit">fahrenheit</option>
                </select>
                </br>
                <input type="submit" id="sub" name="temp">
                <h1 id='result'></h1>
            </form>
      
    
    <script >let main=()=>{
        let val = document.getElementById('val').value
        let op = document.getElementById('op').value
        let result = document.getElementById('result')
        let ic = document.getElementById('ic')
    
        let re
    
        let FtoC=(chr)=>{
            let c = Math.round((chr-32)*5/9)
            if(c <= 10){
                result.innerHTML=(`<span>&#129398;</span> Result = ${c}°celsius <span>&#129398;</span>`) 
                ic.src = "R.jpg"
            }else if(c >= 40){
                result.innerHTML =(`<span>&#129397;</span> Result = ${c}°celsius <span>&#129397;</span>`) 
                ic.src = "669aeb2945029bb3f7ce83d8e5a2dfb0.jpg"
            }else{
                result.innerHTML=(`<span>&#128519;</span> Result = ${c}°celsius <span>&#128519;</span>`)
                ic.src = "R.png"
            }
        }
    
        let CtoF=(fhr)=>{
            let f = Math.round((fhr*9/5)+32)
            if(f <= 50){
                result.innerHTML=(`<span>&#129398;</span> Result = ${f}°fahrenheit <span>&#129398;</span>`) 
                ic.src = "R.jpg"
            }else if(f >= 104){
                result.innerHTML =(`<span>&#129397;</span> Result = ${f}°fahrenheit <span>&#129397;</span>`) 
                ic.src = "669aeb2945029bb3f7ce83d8e5a2dfb0.jpg"
            }else{
                result.innerHTML=(`<span>&#128519;</span> Result = ${f}°fahrenheit <span>&#128519;</span>`)
                ic.src = "R.png"
                
            }
        }
    
        if(op=="celsius"){
            re = FtoC(val)
            return re
        }else{
            re= CtoF(val)
            return re
        }
    }</script>
